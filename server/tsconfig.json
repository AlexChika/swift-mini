{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 22",
  "_version": "22.18.0",
  "exclude": ["node_modules"],
  "include": ["src", "lib", "swift-mini.d.ts", "src/models"],

  "compilerOptions": {
    "lib": ["ES2024"],
    "module": "es2022",
    "target": "es2022",
    "sourceMap": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./"],
      "@lib/*": ["lib/*"],
      "@src/*": ["src/*"],
      "@models/*": ["src/models/*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true
  }
}
